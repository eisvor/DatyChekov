&НаСервере
Процедура ЗаполнитьТаблицуИтогов() 
	
	//Сохраняем пользовательские данные о цене
	СохраненныеИтоги = Объект.Итоги.Выгрузить();
	
	Объект.Итоги.Очистить();
	Если Не Объект.Марки.Количество() = 0 Тогда
		
		ТаблицаМарок = Объект.Марки.Выгрузить(,"GTIN, EAN, Номенклатура, Количество");
		ТаблицаМарок.Свернуть("GTIN, EAN, Номенклатура", "Количество");
		Объект.Итоги.Загрузить(ТаблицаМарок);
		
		//Восстанавливаем значения 
		Для каждого СтрокаТЧ Из СохраненныеИтоги Цикл
			НайденнаяСтрока = Объект.Итоги.НайтиСтроки(Новый Структура("GTIN, Номенклатура", СтрокаТЧ.GTIN, СтрокаТЧ.Номенклатура));
			Если Не НайденнаяСтрока.Количество() = 0 Тогда
				Для Каждого СтрокаИтог Из НайденнаяСтрока Цикл
					СтрокаИтог.Цена = СтрокаТЧ.Цена;
				КонецЦикла;
			КонецЕсли;
		КонецЦикла;
		
	КонецЕсли;
	
КонецПроцедуры

