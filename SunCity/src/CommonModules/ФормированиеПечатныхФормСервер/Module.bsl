//
Функция СуммаРубКоп(Сумма) Экспорт
	
	Рубли = Цел(Сумма);
	Копейки = Окр(100 * (Сумма - Рубли), 0, 1);
	СуммаРубКоп = "" 
		+ Формат(Рубли, "ЧДЦ=0; ЧГ=0")
		+ " тг. " 
		+ Цел(Копейки /10) 
		+ (Копейки - 10 * Цел(Копейки / 10))
		+" тиын.";
	
	Возврат СуммаРубКоп;
	
КонецФункции // СуммаРубКоп()


