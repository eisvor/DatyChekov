//    ВыводитьКавычки - Булево.
//
Функция РазложитьСтрокуНаименования(Знач Наименование) Экспорт
	
	Результат = Новый Структура();
	Результат.Вставить("Наименование", "");
	Результат.Вставить("ОрганизационноПравоваяФорма", "");
	Результат.Вставить("ОрганизационноПравоваяФормаСокращенно", "");
	Результат.Вставить("ВыводитьКавычки", Ложь);
	
	Наименование = СокрЛП(Наименование);
	ВыводитьКавычки = Истина;
	
