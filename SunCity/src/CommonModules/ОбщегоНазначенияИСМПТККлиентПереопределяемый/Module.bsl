// Обновляет интерфейс программы сохраняя текущее активное окно.
//
Процедура ОбновитьИнтерфейсПрограммы() Экспорт
	
	ТекущееАктивноеОкно = АктивноеОкно();
	ОбновитьИнтерфейс();
	ПроверкаПройдена = Ложь;
	
	СисИнфо = новый СистемнаяИнформация;	
	Если ОбщегоНазначенияКлиентСервер.СравнитьВерсии("8.3.20.0", СисИнфо.ВерсияПриложения) < 0 Тогда
		ПроверкаПройдена = ТекущееАктивноеОкно <> Неопределено;
		Если ПроверкаПройдена Тогда
			ПроверкаПройдена = Не ТекущееАктивноеОкно.НачальнаяСтраница;
		КонецЕсли;
	Иначе
		ПроверкаПройдена = ТекущееАктивноеОкно <> Неопределено;
	КонецЕсли;
	
	Если ПроверкаПройдена Тогда
		ТекущееАктивноеОкно.Активизировать();
	КонецЕсли;
	
КонецПроцедуры

