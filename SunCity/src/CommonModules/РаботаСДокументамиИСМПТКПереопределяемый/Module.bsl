		Возврат ПроверитьОснованияЗаказКМ(МассивДокументов);
		
	Иначе
		
		//Для Оприходования и Списания проверки не выполняем, т.к. там нет вида операции
		Возврат Новый Массив();
		
	КонецЕсли;
   	
