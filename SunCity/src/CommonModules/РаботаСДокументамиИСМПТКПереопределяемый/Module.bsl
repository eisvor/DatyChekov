		Запрос.УстановитьПараметр("Упаковка",   Упаковка);
	КонецЕсли;
	
	МассивШтрихкодов = Запрос.Выполнить().Выгрузить().ВыгрузитьКолонку("Штрихкод");
	СписокGTIN =  Новый Массив;
