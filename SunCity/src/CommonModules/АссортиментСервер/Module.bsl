		             |   						И МИНУТА(&НаДату) < МИНУТА(ТЧВремяДействия.ВремяОкончания)
		             |   					ИЛИ ЧАС(&НаДату) = ЧАС(ТЧВремяДействия.ВремяНачала)
		             |   						И МИНУТА(&НаДату) = МИНУТА(ТЧВремяДействия.ВремяНачала)
