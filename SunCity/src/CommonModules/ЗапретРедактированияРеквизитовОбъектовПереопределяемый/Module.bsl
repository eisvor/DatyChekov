//   	Реквизит.Имя = "Контрагент";
//   	Реквизит.Предупреждение = НСтр("ru = 'Поле не рекомендуется менять, если уже есть введенные документы'");
//   	БлокируемыеРеквизиты.Добавить(Реквизит);
//   	...
//   	Возврат БлокируемыеРеквизиты;
//   КонецФункции
//
