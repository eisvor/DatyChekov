// Преобразовывает секунды в дату.
//
// Параметры:
//  Секунды - Число - количество секунд.
//
Функция ПреобразоватьСекундыВДату(Секунды) Экспорт
	
	Результат = Неопределено;
		
	Если Секунды < 0 Тогда
		
		Возврат Результат;
		
	КонецЕсли;
		
	Часов  = Цел(Секунды / 3600);
	Минут  = Цел((Секунды - (Часов * 3600)) / 60);
	Секунд = Секунды - ((Минут * 60) + (Часов * 3600));
	
	Если Не (Часов > 23
		Или Минут > 59
		Или Секунд > 59) Тогда
		Результат = Дата(1,1,1, Часов, Минут, Секунд);
	КонецЕсли;
	
	Возврат Результат;
	
КонецФункции

// Сложение даты и времени.
//
// Параметры:
//  ДатаКалендаря - Дата - дата календаря для сложения.
//  Время - Время - время для сложения.
//
// Возвращаемое значение:
//  ДатаВремя - дата и время после сложения.
//
Функция СложитьДатуИВремя(ДатаКалендаря, Время) Экспорт
	
	Результат = '00010101';
	
	Год   = Год(ДатаКалендаря);
	Месяц = Месяц(ДатаКалендаря);
	Число = День(ДатаКалендаря);
	
	Час     = Час(Время);
	Минута  = Минута(Время);
	Секунда = Секунда(Время);
	
	Возврат Дата(Год, Месяц, Число, Час, Минута, Секунда);
	
КонецФункции

